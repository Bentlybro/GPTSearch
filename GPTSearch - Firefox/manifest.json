{
  "manifest_version": 2,
  "name": "ChatGPT History Search",
  "version": "1.4",
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "*://chat.openai.com/*",
    "*://chatgpt.com/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
